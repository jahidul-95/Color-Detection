<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_find_colour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jahidul.colourdetector.FindColour">
    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_find_colour_camera"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X=0,Y=0"
        android:id="@+id/touch_coordinator"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/touch_coordinator"
        android:id="@+id/textcolour"
        android:text="Color:"
        android:textColor="@color/colorAccent"
        />

    <Button
        android:text="Edit Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonRename" />

    <TextView
        android:text="Color Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/buttonRename"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewColorName" />



</RelativeLayout>
